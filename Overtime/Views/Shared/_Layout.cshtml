@using System.Web.Optimization
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/styles")
    @Styles.Render("~/style/front")

  
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
</head>
<body>
<!--Start-->


    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("كلية الطب ", "Index", "Home", new { area = "" }, new { @class = "navbar-brand  pull-left" })

            </div>
            <div class="navbar-collapse collapse pull-right">
                <ul class="nav navbar-nav">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li> <a href="@Url.RouteUrl("Logout")">خروج</a></li>
                        <li> <a href="@Url.RouteUrl("Login")">أنشاء أستمارة</a></li>
                        <li> <a href="@Url.RouteUrl("Login")">الأرشيف</a></li>
                        if (User.IsInRole("admin"))
                        {
                            <li> <a href="@Url.RouteUrl("admin")">مدير الصفحة</a></li>
                        }
                    }
                    else
                    {

                        <li> <a href="@Url.RouteUrl("Login")">دخول</a></li>
                    }



                </ul>
            </div>
        </div>
    </div>


<!--End-->

    <div class="container-fluid">
        <div class="row">

            <div class="col-lg-push-3">
                <div class="panel panel-primary">
                    <div class="panel-heading">
                        <h1>hell @User.Identity.Name</h1>
                    </div>
                    <div class="panel-body">

                        <a href="#" class=""></a>
                    </div>


                </div>
            </div>
            <div class=""></div>
            @RenderBody()
            <hr/>
        </div>
        <div class="col-lg-12">

            <footer>
                <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
            </footer>
        </div>
        </div>
    </div>
    @Scripts.Render("~/scripts")
</body>
</html>